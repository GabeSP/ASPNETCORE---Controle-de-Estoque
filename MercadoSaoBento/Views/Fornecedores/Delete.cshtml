@model MercadoSaoBento.Models.Fornecedor

@{
    ViewData["Title"] = "Excluir";
}
<link href="~/css/tabelas.css" rel="stylesheet" />
<link href="~/css/customLayout.css" rel="stylesheet" />
<link href="~/css/home.css" rel="stylesheet" />
<div class="container-fluid">
    <h2>Excluir</h2>
    <p class="text-danger">@ViewData["ErrorMessage"]</p>
    <div>
        <h4>Fornecedor</h4>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.Nome)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Nome)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.CNPJ)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.CNPJ)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.Telefone)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Telefone)
            </dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="FornecedorID" />
            <input type="submit" value="Confirmar" class="btn btn-danger" />
            <a asp-action="Index" class="btn btn-default">Voltar</a>
        </form>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="~/lib/jquery-mask-plugin/src/jquery.mask.js"></script>
    <script>
        $(document).ready(function () {
            $('#telefone').mask('(00)00000-0000');
            $("#cnpj").mask('00.000.000/0000-00', { reverse: true });
        });
    </script>
}